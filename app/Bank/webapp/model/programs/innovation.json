{
  "programId": "innovation",
  "programName": "Innovation Grant",
  "description": "Grants for innovative projects that bring new solutions to market challenges. Focus on technology-driven innovations.",
  "fundingRange": {
    "min": 10000000,
    "max": 100000000,
    "currency": "RWF"
  },
  "eligibility": {
    "businessAge": {
      "min": 1,
      "unit": "years"
    },
    "registrationRequired": true,
    "country": ["RW", "KE", "UG", "TZ"],
    "requirements": [
      "Proven innovation track record",
      "Patent or IP protection",
      "Scalable business model",
      "Technology-driven solution"
    ]
  },
  "steps": {
    "programSelection": {
      "enabled": true,
      "required": true
    },
    "applicantInfo": {
      "enabled": true,
      "required": true,
      "fields": {
        "fullName": {"required": true, "visible": true},
        "email": {"required": true, "visible": true},
        "phone": {"required": true, "visible": true},
        "dateOfBirth": {"required": true, "visible": true},
        "address": {"required": true, "visible": true},
        "city": {"required": true, "visible": true},
        "country": {"required": true, "visible": true},
        "postalCode": {"required": false, "visible": true}
      }
    },
    "projectDetails": {
      "enabled": true,
      "required": true,
      "fields": {
        "title": {"required": true, "visible": true},
        "description": {"required": true, "visible": true, "minLength": 200},
        "fundingAmount": {"required": true, "visible": true},
        "duration": {"required": true, "visible": true, "max": 36},
        "category": {"required": true, "visible": true},
        "startDate": {"required": true, "visible": true}
      },
      "documents": {
        "businessPlan": {"required": true, "maxSize": 5, "formats": ["pdf", "doc", "docx"]},
        "financialStatements": {"required": true, "maxSize": 5, "formats": ["pdf", "xls", "xlsx"]},
        "patentDocuments": {"required": false, "maxSize": 5, "formats": ["pdf"]},
        "technicalSpecifications": {"required": true, "maxSize": 10, "formats": ["pdf", "doc", "docx"]}
      }
    },
    "review": {
      "enabled": true,
      "termsAndConditions": true
    }
  },
  "notifications": {
    "email": true,
    "sms": true
  },
  "processingTime": {
    "value": 45,
    "unit": "days"
  }
}
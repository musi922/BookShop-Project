{
  "name": "study",
  "version": "1.0.0",
  "description": "SAP CAP and UI5 Study Application",
  "private": true,
  "scripts": {
    "start": "cds-serve",
    "watch": "cds watch",
    "lint": "npx eslint . --max-warnings 0 --report-unused-disable-directives",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:staged": "node scripts/run-tests.js",
    "build": "cds build --production",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy": "cds deploy",
    "validate:functions": "node scripts/validate-function-names.js",
    "validate:console": "node scripts/check-console-logs.js",
    "precommit": "lint-staged",
    "prepare": "husky",
    "validate:branch": "node scripts/validate-branch.js"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "node scripts/validate-function-names.js",
      "node scripts/check-console-logs.js",
      "eslint --report-unused-disable-directives --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ],
    "scripts/**/*.js": []
  },
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.15.5",
    "@cap-js/sqlite": "^2.0.4",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/js": "^9.39.1",
    "@sap/cds": "^9.4.4",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-yml": "^1.19.0",
    "express": "^4"
  },
  "devDependencies": {
    "@sap/cds-dk": "^9.4.3",
    "@sap/eslint-plugin-cds": "^2",
    "eslint": "^8",
    "husky": "^9",
    "jest": "^29",
    "lint-staged": "^15",
    "prettier": "^3",
    "rimraf": "^5"
  },
  "engines": {
    "node": ">=18"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
      }
    }
  }
}
